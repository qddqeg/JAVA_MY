			case 1: 
				createAccount(accountArray);
				break;
				
			case 2: 
				accountList(accountArray);
				break;
				
			case 3: 
				deposit(accountArray);
				break;
				
			case 4: 
				withdraw(accountArray);
				break;
				
			case 5: 
				run= false;
				break;
			}
			
		}

