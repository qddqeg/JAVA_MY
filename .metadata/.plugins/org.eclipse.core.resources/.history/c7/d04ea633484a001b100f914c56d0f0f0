package JAVA_1230;
import java.util.Scanner;
public class Car_main implements Car_color {
static Scanner sc= new Scanner(System.in);
static int pick;
static boolean bo= true;
	public static void main(String[] args) {
		 
		while(bo) {
			System.out.println("===================================");
			System.out.println("자동차를 만듭니다 ");
			System.out.println("                 _____             ");
			System.out.println("             ___/  ㅁ  |__           ");
			System.out.println("            (---0-----0---)          ");
			
			System.out.println("===================================");
			System.out.println("| 1.color | 2.company | 3.tire |");
			System.out.println("===================================");
			pick=sc.nextInt();
			switch(pick) {
			case 1:
				System.out.println("색상을 받아옵니다.");
				Car_main main= new Car_main();
				main.ran_color();
				
				
			}
	         
	        
	         
		}
		
	}
	public static void ran_color() {
		System.out.println("색상을 받아옵니다.");
	}

}
